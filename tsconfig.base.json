{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/contracts": ["packages/contracts/src/index.ts"],
      "@/db": ["packages/db/src/index.ts"],
      "@/*": ["apps/web/src/*"]
    }
  }
}

