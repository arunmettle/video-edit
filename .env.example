# Example environment variables

# Postgres connection string
# For Docker/local: adjust user/password/DB as needed
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/canva_lite?schema=public"

# NextAuth
# If deploying, set NEXTAUTH_URL to your site origin
NEXTAUTH_URL="http://localhost:3000"
# Generate a strong secret (e.g.,: openssl rand -base64 32)
AUTH_SECRET="changeme-please"

# AWS S3 (for presigned uploads)
AWS_REGION="us-east-1"
S3_BUCKET="your-bucket-name"
AWS_ACCESS_KEY_ID="AKIA..."
AWS_SECRET_ACCESS_KEY="..."

# Queue (Redis / BullMQ)
REDIS_URL="redis://localhost:6379"
